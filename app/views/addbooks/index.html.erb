<div class="box">
	<div class="box-head">
		<h2 class="left">Address Book</h2>
	</div>
</div>

<div class="toolbar">
	<table style="width:75%;">
		<tr>
			<td width=200px><p><%= link_to image_tag("add.png", :border => 0, :title => 'New Contact') + "New", new_addbook_path %></p></td>
			<td><%= link_to 'ALL', addbooks_path %></td>
			<% alphatab = Array('A' .. 'Z') %>
			<% alphatab.each do |alphatab| %>
			  <% add_exist = Addbook.count(:all, :conditions => ['name ILIKE ?', "#{alphatab}%"]) %>
			  <% if add_exist < 1 %>
					<td><%= alphatab %></td>
				<% else %>
					<td><%= link_to "#{alphatab}", :action => "index", :search => "#{alphatab}" %></td>
				<% end %>
			<% end %>
		</tr></table>
		<p>
</div>

<div class="indextable">
	<table>
		<tr>
	    <th>Name</th>
	    <th>Phone</th>
	    <th>Fax</th>
	    <th>Address</th>
	    <th>Mail</th>
	    <th>Web</th>
	    <th colspan=3 class="ac">Control</th>
  </tr>
	<% @addbooks.each do |addbook| %>
  <tr>
    <td><%=h addbook.name %></td>
    <td><%=h addbook.phone %></td>
    <td><%=h addbook.fax %></td>
    <td><%#=h addbook.address %>
		<% rest, *last = addbook.address.split("//")%>
		<%=h rest %>
		<% unless last.blank? || last.nil? %>
			 <br>Postcode : <%=h last%>
		<% end %>
	</td>
    <td><%=h addbook.mail %></td>
    <td><%=h addbook.web %></td>

    <td width=10px><%= link_to image_tag("document.png", :border => 0, :title => 'Show'), :action => 'show', :id => addbook %></td>
    <td width=10px><%= link_to image_tag("edit.png", :border => 0, :title => 'Edit'), :action => 'edit', :id => addbook %></td>
    <td width=10px><%= link_to image_tag("delete.png", :border => 0, :title => 'Delete'), addbook, :confirm => 'Are you sure?', :method => :delete %></td>

  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Contact', new_addbook_path %>

</div>