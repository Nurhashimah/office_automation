
  <table width=100% >
			<tr>
				<td class="leftcol"><label for="name">Company Name</label></td>
				<td><%= f.text_field :name %></td>
			</tr>
			<tr>
				<td class="leftcol"><label for="name">Contact Person</label></td>
				<td>
					<%= f.text_field :contact_person %>
					<i><font color=#AAA size=-2 style=italic> (Eg: Encik Halim, Cik Sharifah(PA))</font></i>
				</td>
			</tr>
			<tr>
				<td class="leftcol"><label for="phone">Phone No</label></td>
				<td>
					<%= f.text_field :phone %>
					<i><font color=#AAA size=-2> (Eg: 03-89898989(DL), 03-8888888(FL)ext 273, 012-753555(HP), 013-12121212(HP-PA))</font></i>
				</td>
			</tr>
	
			<tr>
				<td class="leftcol"><label for="fax">Fax</label></td>
				<td>
					<%= f.text_field :fax %><i><font color=#AAA size=-2> (Eg: 03-87139741, 03-819721794)</font></i>
				</td>
			</tr>
			<tr>
				<td class="leftcol"><label for="address">Address</label></td>
				<td>
					<!--7Feb2013-->
					<% unless @addbook.id.blank? %>
						<% rest, *last = @addbook.address.split("//")%>
					<% else %>
						<% rest = @address %>
						<% last = @postcode %>
					<% end %>
					<%= f.text_area :address, :rows => 6, :cols => 29, :value => rest %>
					<!--7Feb2013-->
				</td>
			</tr>
			<!--7Feb2013-->
			<tr>
				<td class="leftcol"><label for="mail">Postcode</label></td>
				<td>
					<%= f.text_field :postcode, :value => last %>
				</td>
			</tr>
			<!--7Feb2013-->
			<tr>
				<td class="leftcol"><label for="mail">E-Mail</label></td>
				<td><%= f.text_field :mail %></td>
			</tr>
	
			<tr>
				<td class="leftcol"><label for="web">Web</label></td>
				<td><%= f.text_field :web %></td>
			</tr>	
		</table>
<BR>